<br><br>
<div class="follow_view_username">
  <%= @user.username %>'s followers:</div>
<br><br><br><br><br>

<% @followers.each do |follower| %>
    <table class="user_show_table">
      <tr>
        <td class="user_follow_show_td"> <%= link_to('Username:', show_user_url(follower.id), :method => :get) %> </td>
        <td class="user_follow_show_td"> <%= link_to('Following', show_followers_url(follower.id), :method => :get) %> </td>
        <td class="user_follow_show_td"> <%= link_to('Followed by', show_followeds_url(follower.id), :method => :get) %> </td>
        <td class="user_follow_show_td"> <%= link_to('Tweets', show_tweets_url(follower.id), :method => :get) %> </td>
      </tr>
      <tr>
        <td class="user_follow_show_td"> <%= follower.username %> </td>
        <td class="user_follow_show_td"> <%= follower.num_followers %> </td>
        <td class="user_follow_show_td"> <%= follower.num_followeds %> </td>
        <td class="user_follow_show_td"> <%= follower.num_tweets %> </td>
      </tr>
    </table>
<br>
<% end %>
